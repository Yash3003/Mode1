package com.hcl.quiz;

public class Words {
	public void calc(int n){
		int a,b,c,d;
		if(n>9999){
			System.out.println("Out of range");
		}else{
		String[] ones=new String[]{"zero","one","two","three","four","five","six","seven","eight","nine"};
		String[] tens=new String[]{" ","ten","twenty","thirty","forty","fifty","sixty","seventy","eighty","ninety"};
		a=n%10;
		b=(n%100)/10;
		c=(n%1000)/100;
		d=n/1000;
		if(d>0){
			System.out.println(ones[d] + "thousand");
		}
		if(c>0){
			System.out.println(ones[c] + "hundred and ");
		}
		if(b>0){
			System.out.println(tens[b]);
		}
		if(a>0){
			System.out.println(ones[a]);
		}
		}
	}
	public static void main(String[] args) {
		Words obj=new Words();
		obj.calc(8785);
	}
}
